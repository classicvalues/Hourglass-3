  function validate() {
    if (document.querySelector('input[name="payment"]:checked') == null) {
      alert('Please select a payment type!');
      return false;
    }
    if (!document.checkoutForm.tnc.checked) {
      alert('Please accept terms and conditions.');
      return false;
    }

    return true;
  }
</script>

