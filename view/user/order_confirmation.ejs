<section class="confirmation_part padding_top">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="container">
          <div class="row">
            <!-- <div class="col-lg-6">
              <div class="single_confirmation_details">
                <h4>order info</h4>
                <ul>
                  <li>
                    <p>order id</p>
                    <span>: </span>
